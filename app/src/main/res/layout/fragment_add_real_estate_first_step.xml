<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/rectangle_white_background"
    tools:context=".ui.AddRealEstateFirstStepFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutPropertyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_home_24"/>

                <Spinner
                    android:id="@+id/propertyTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:contentDescription="@string/real_estate_type"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <TextView
                android:id="@+id/propertyTypeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/required_property_type"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutPropertyType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutPropertyType"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutVoivodeship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <Spinner
                    android:id="@+id/voivodeship"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:contentDescription="@string/real_estate_type"/>

            </LinearLayout>

        <TextView
            android:id="@+id/voivodeshipHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
            android:text="@string/required_voivodeship"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/layoutVoivodeship"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutVoivodeship"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

        <LinearLayout
            android:id="@+id/layoutCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_edit_text_margin_top"
            android:background="@drawable/background_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="@dimen/icon_width"
                android:layout_height="@dimen/icon_height"
                android:layout_marginStart="@dimen/icon_margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/baseline_location_on_24"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:background="@null"
                android:hint="@string/city"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                android:textSize="@dimen/edit_text_size"
                android:textStyle="bold"
                tools:ignore="VisualLintTextFieldSize" />

        </LinearLayout>

        <TextView
            android:id="@+id/cityHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
            android:background="@color/white"
            android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
            android:text="@string/required_city"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/layoutCity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutCity"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <Spinner
                    android:id="@+id/district"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:contentDescription="@string/real_estate_type"/>

            </LinearLayout>

            <TextView
                android:id="@+id/districtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/district"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutDistrict"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutDistrict"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <EditText
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    android:hint="@string/street"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                    android:textSize="@dimen/edit_text_size"
                    android:textStyle="bold"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <TextView
                android:id="@+id/streetHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/required_street"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutStreet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutStreet"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutBuildingNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <EditText
                    android:id="@+id/buildingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    android:hint="@string/building_number"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                    android:textSize="@dimen/edit_text_size"
                    android:textStyle="bold"
                    tools:ignore="TextFields,VisualLintTextFieldSize" />

            </LinearLayout>

            <TextView
                android:id="@+id/buildingNumberHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/required_building_number"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutBuildingNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutBuildingNumber"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFloorWithHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <EditText
                    android:id="@+id/floor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    android:hint="@string/floor"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                    android:textSize="@dimen/edit_text_size"
                    android:textStyle="bold"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <TextView
                android:id="@+id/floorHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/floor"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutFloor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutFloor"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFlatNumberWithHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutFlatNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <EditText
                    android:id="@+id/flatNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    android:hint="@string/flat_number"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                    android:textSize="@dimen/edit_text_size"
                    android:textStyle="bold"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <TextView
                android:id="@+id/flatNumberHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/flat_number"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutFlatNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutFlatNumber"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutPostalCodeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/layout_edit_text_margin_horizontal">

            <LinearLayout
                android:id="@+id/layoutPostalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_edit_text_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_location_on_24"/>

                <EditText
                    android:id="@+id/postalCode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    android:hint="@string/postal_code_example"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:digits="0123456789-"
                    android:maxLength="6"
                    android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                    android:textSize="@dimen/edit_text_size"
                    android:textStyle="bold"
                    tools:ignore="VisualLintTextFieldSize" />

            </LinearLayout>

            <TextView
                android:id="@+id/postalCodeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_view_edit_text_header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/text_view_edit_text_header_padding_horizontal"
                android:text="@string/postal_code"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutPostalCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutPostalCode"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top"
            android:drawableEnd="@drawable/baseline_navigate_next_24"
            android:drawablePadding="@dimen/button_drawable_padding"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="@string/next_button" />

    </LinearLayout>

</ScrollView>