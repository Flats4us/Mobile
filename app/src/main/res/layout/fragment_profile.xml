<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyProfileFragment"
    android:background="@drawable/app_background">

    <ScrollView
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_white_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/image_view_profile_picture_margin">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="@dimen/image_view_profile_picture_size"
                        android:layout_height="@dimen/image_view_profile_picture_size"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/candidate"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearanceOverlay="@style/Circular" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/verified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/orange"
                        android:src="@drawable/verified"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:shapeAppearanceOverlay="@style/Circular" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h2"
                    tools:text="John" />

                <TextView
                    android:id="@+id/age_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h2"
                    tools:text="23" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/design_default_color_secondary_variant"
                    android:progressTint="@color/orange"
                    android:secondaryProgressTint="@color/design_default_color_secondary_variant"
                    android:stepSize="0.1"
                    tools:rating="3.2" />

                <ImageButton
                    android:id="@+id/reviewsButton"
                    android:layout_width="@dimen/image_button_reviews_size"
                    android:layout_height="@dimen/image_button_reviews_size"
                    android:src="@drawable/list"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook"
                    android:padding="@dimen/image_button_social_media_padding"
                    android:background="@null"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twitter"
                    android:padding="@dimen/image_button_social_media_padding"
                    android:background="@null"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                <ImageButton
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/instagram"
                    android:padding="@dimen/image_button_social_media_padding"
                    android:background="@null"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rectangle_white_background"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <LinearLayout
                    android:id="@+id/studyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/layout_profile_margin_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/university"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/school" />

                    <TextView
                        android:id="@+id/university"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="@string/university_example" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/interestsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/layout_profile_margin_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/interests"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/hobby" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/interestsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/emptyView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data_available"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/opinionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/layout_profile_margin_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"
                        android:textSize="@dimen/h2"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@drawable/baseline_edit_48" />

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/reviewsFlexboxLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignContent="flex_start"
                        app:alignItems="stretch"
                        app:flexWrap="wrap">

                        <TextView
                            android:id="@+id/noReviewsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_data_available"
                            android:visibility="gone"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutHelpful"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/helpful"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/helpful"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumHelpful"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/helpful"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutCooperative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/cooperative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/cooperative"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumCooperative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/cooperative"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutTidy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/tidy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/tidy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumTidy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/tidy"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutFriendly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/friendly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/friendly"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumFriendly"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/friendly"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutRespectingPrivacy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/respectingPrivacy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/respectingPrivacy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumRespectingPrivacy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/respectingPrivacy"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutCommunicative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/communicative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/communicative"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                tools:ignore="RtlSymmetry"
                                android:id="@+id/sumCommunicative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/communicative"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutUnfair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/unfair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/unfair"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumUnfair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/unfair"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutLackOfHygiene"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/lackOfHygiene"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/lackOfHygiene"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumLackOfHygiene"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/lackOfHygiene"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutUntidy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/untidy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/untidy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumUntidy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/untidy"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutConflicting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/conflicting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/conflicting"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumConflicting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/conflicting"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutNoisy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/noisy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/noisy"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumNoisy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/noisy"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layoutNotFollowingTheArrangements"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                            android:layout_marginTop="@dimen/layout_opinion_margin_vertical"
                            android:background="@drawable/oval_white_background"
                            android:backgroundTint="#44C3FA"
                            android:padding="@dimen/layout_opinion_padding">

                            <TextView
                                android:id="@+id/notFollowingTheArrangements"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="@string/notFollowingTheArrangements"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/sumNotFollowingTheArrangements"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                android:singleLine="true"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/notFollowingTheArrangements"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="0"
                                tools:ignore="RtlSymmetry" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

