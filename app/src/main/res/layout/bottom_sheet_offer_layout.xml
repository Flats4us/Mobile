<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_bottom_sheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_view_image_height"
            android:contentDescription="zdjęcie nieruchomości"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/rounded_button"
            android:src="@drawable/unobserve"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintEnd_toEndOf="@id/image"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/imageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/example"
            android:background="@color/transparent_black"
            android:textColor="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            app:drawableLeftCompat="@drawable/baseline_camera_alt_24"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintEnd_toEndOf="@id/image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ownerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_marginTop="@dimen/header_vertical_space"
        android:layout_marginBottom="@dimen/header_vertical_space">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner"
            android:textSize="@dimen/regular_text_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/text_view_horizontal_margin" />
        <ImageView
            android:id="@+id/ownerPhoto"
            android:layout_width="@dimen/image_view_small_profile_picture_width"
            android:layout_height="@dimen/image_view_small_profile_picture_height"
            android:layout_gravity="center"
            android:src="@drawable/baseline_person_24"
            android:layout_marginEnd="@dimen/text_view_horizontal_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/owner" />
        <TextView
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/regular_text_size"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/regular_vertical_space">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textStyle="italic"
            android:textSize="@dimen/subtext_text_size"
            android:layout_marginEnd="@dimen/text_view_horizontal_margin"
            android:layout_weight="1"
            android:gravity="end"/>
        <TextView
            android:id="@+id/startDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="@dimen/subtext_text_size"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/regular_vertical_space">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:textStyle="italic"
            android:textSize="@dimen/subtext_text_size"
            android:layout_marginEnd="@dimen/text_view_horizontal_margin"
            android:layout_weight="1"
            android:gravity="end"/>
        <TextView
            android:id="@+id/endDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="@dimen/subtext_text_size"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/header_vertical_space">
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h1"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly_price"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:paddingStart="@dimen/table_cell_padding"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/regular_vertical_space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/deposit"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <TextView
                android:id="@+id/deposit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:textSize="@dimen/regular_text_size"
                android:paddingStart="@dimen/table_cell_padding"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/city"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:textSize="@dimen/regular_text_size"
                android:paddingStart="@dimen/table_cell_padding"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/district"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <TextView
                android:id="@+id/district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:textSize="@dimen/regular_text_size"
                android:paddingStart="@dimen/table_cell_padding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/street"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <TextView
                android:id="@+id/street"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:textSize="@dimen/regular_text_size"
                android:paddingStart="@dimen/table_cell_padding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/area"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:paddingStart="@dimen/table_cell_padding">

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regular_text_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit"
                    android:textSize="@dimen/regular_text_size"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/landAreaLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/land_area"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:paddingStart="@dimen/table_cell_padding">

                <TextView
                    android:id="@+id/landArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/regular_text_size"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit"
                    android:textSize="@dimen/regular_text_size"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_name_weight"
                android:text="@string/number_of_rooms"
                android:textStyle="italic"
                android:textSize="@dimen/regular_text_size"
                android:gravity="end"/>

            <TextView
                android:id="@+id/numberOfRooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/text_view_column_value_weight"
                android:textSize="@dimen/regular_text_size"
                android:paddingStart="@dimen/table_cell_padding"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/see_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/see_details"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>