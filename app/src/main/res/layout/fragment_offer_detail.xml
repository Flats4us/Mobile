<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OwnerOfferDetailFragment"
    android:background="@drawable/app_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/app_padding">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/header_vertical_margin"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/layout_view_pager_margin_vertical">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_view_image_height"
                        android:contentDescription="@string/property_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <ImageButton
                        android:id="@+id/addButton"
                        android:layout_width="@dimen/image_button_observe_size"
                        android:layout_height="@dimen/image_button_observe_size"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/unobserve"
                        android:layout_marginEnd="@dimen/image_button_observe_margin"
                        android:layout_marginBottom="@dimen/image_button_observe_margin"
                        app:layout_constraintTop_toTopOf="@id/image"
                        app:layout_constraintEnd_toEndOf="@id/image"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/imageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@color/transparent_black"
                        android:textColor="@color/white"
                        android:padding="@dimen/text_view_image_count_padding"
                        app:drawableLeftCompat="@drawable/baseline_camera_alt_24"
                        app:drawableTint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/image"
                        app:layout_constraintEnd_toEndOf="@id/image" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/regular_vertical_space">

                    <ImageButton
                        android:id="@+id/smoking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/smoking"
                        android:background="@drawable/rectangle_white_background"
                        android:backgroundTint="@color/orange"
                        android:layout_marginHorizontal="@dimen/icon_margin"
                        android:padding="@dimen/image_button_survey_padding"/>

                    <ImageButton
                        android:id="@+id/pets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pets"
                        android:background="@drawable/rectangle_white_background"
                        android:backgroundTint="@color/orange"
                        android:layout_marginHorizontal="@dimen/icon_margin"
                        android:padding="@dimen/image_button_survey_padding"/>

                    <ImageButton
                        android:id="@+id/parties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/celebration"
                        android:background="@drawable/rectangle_white_background"
                        android:backgroundTint="@color/orange"
                        android:layout_marginHorizontal="@dimen/icon_margin"
                        android:padding="@dimen/image_button_survey_padding"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle_white_background"
                    android:padding="16dp"
                    android:layout_marginBottom="@dimen/regular_vertical_space">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/regular_vertical_space">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/issue_date"
                            android:textStyle="italic"
                            android:textSize="@dimen/subtext_text_size"
                            android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                            android:layout_weight="1"
                            android:gravity="end"/>
                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:textSize="@dimen/subtext_text_size"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/regular_vertical_space">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/end_date"
                            android:textStyle="italic"
                            android:textSize="@dimen/subtext_text_size"
                            android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                            android:layout_weight="1"
                            android:gravity="end"/>
                        <TextView
                            android:id="@+id/endDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:textSize="@dimen/subtext_text_size"
                            android:layout_weight="1"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ownerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/header_vertical_margin"
                    android:background="@drawable/rectangle_white_background"
                    android:padding="@dimen/app_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                        android:text="@string/owner"
                        android:textSize="@dimen/regular_text_size"
                        tools:ignore="TextContrastCheck" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ownerPhoto"
                        android:layout_width="@dimen/image_view_small_profile_picture_width"
                        android:layout_height="@dimen/image_view_small_profile_picture_height"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_person_24"
                        app:shapeAppearanceOverlay="@style/Circular"
                        android:background="@color/white"
                        android:layout_marginEnd="@dimen/text_view_horizontal_margin"/>

                    <TextView
                        android:id="@+id/owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/regular_text_size"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rectangle_white_background"
                    android:layout_marginBottom="@dimen/header_vertical_margin"
                    android:padding="@dimen/app_padding">

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h1"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_price"
                        android:textSize="@dimen/h1"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/table_cell_padding"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle_white_background"
                    android:padding="@dimen/text_view_padding"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_details"
                        android:textSize="@dimen/regular_text_size"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/text_view_inside_header_margin_top"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/deposit"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/deposit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/city"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/district"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/district"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/street"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/street"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/area"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry">

                            <TextView
                                android:id="@+id/area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_view_table_cell_text_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit"
                                android:textSize="@dimen/text_view_table_cell_text_size"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/landAreaLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/land_area"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            tools:ignore="RtlSymmetry">

                            <TextView
                                android:id="@+id/landArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_view_table_cell_text_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit"
                                android:textSize="@dimen/text_view_table_cell_text_size"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/number_of_rooms"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/numberOfRooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/period"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingStart="8dp"
                            tools:ignore="RtlSymmetry">

                            <TextView
                                android:id="@+id/period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_view_table_cell_text_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/month"
                                android:textSize="@dimen/text_view_table_cell_text_size"
                                android:paddingStart="1dp"
                                tools:ignore="RtlSymmetry" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/max_residents"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/maxResidents"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/construction_year"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/constructionYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/equipment"
                            android:textStyle="italic"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:gravity="end"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/equipment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_view_table_cell_text_size"
                            android:paddingStart="@dimen/text_view_padding"
                            tools:ignore="RtlSymmetry" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rectangle_white_background"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_view_inside_header_margin_top"
                        android:gravity="center_horizontal"
                        android:text="@string/description"
                        android:textSize="@dimen/regular_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:ellipsize="none"
                        android:maxLines="100"
                        android:scrollHorizontally="false"
                        android:text="@string/lorem_ipsum"
                        android:textSize="@dimen/subtext_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle_white_background"
                    android:padding="@dimen/text_view_padding"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reviews"
                        android:textSize="@dimen/regular_text_size"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/text_view_inside_header_margin_top"/>

                    <TextView
                        android:id="@+id/emptyView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data_available"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/opinionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressBackgroundTint="@color/design_default_color_secondary_variant"
                                android:progressTint="@color/orange"
                                android:secondaryProgressTint="@color/design_default_color_secondary_variant"
                                android:stepSize="0.1"
                                tools:rating="3.2" />

                            <ImageButton
                                android:id="@+id/reviewsButton"
                                android:layout_width="@dimen/image_button_reviews_size"
                                android:layout_height="@dimen/image_button_reviews_size"
                                android:src="@drawable/list"
                                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        </LinearLayout>

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/reviewsFlexboxLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:alignContent="flex_start"
                            app:alignItems="stretch"
                            app:flexWrap="wrap">

                            <TextView
                                android:id="@+id/noReviewsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_data_available"
                                android:visibility="gone"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layoutService"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                                android:background="@drawable/oval_white_background"
                                android:backgroundTint="#44C3FA"
                                android:padding="@dimen/layout_opinion_padding">

                                <TextView
                                    android:id="@+id/service"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:text="@string/service_with_colon"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/sumService"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/layout_text_view_opinion_padding_horizontal"
                                    android:singleLine="true"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/service"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="7"
                                    tools:ignore="RtlSymmetry" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/layoutLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/layout_opinion_margin_horizontal"
                                android:background="@drawable/oval_white_background"
