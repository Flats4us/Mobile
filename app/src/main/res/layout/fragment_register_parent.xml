<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    tools:context=".ui.RegisterParentFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_padding"
        android:layout_marginBottom="@dimen/header_vertical_margin"
        android:gravity="center_horizontal"
        android:text="@string/register"
        android:textSize="@dimen/h1"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_add_property_height"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:layout_marginBottom="@dimen/progress_bar_add_property_margin_bottom"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/registerStep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_register"
        android:layout_marginHorizontal="@dimen/horizontal_space"/>

</LinearLayout>