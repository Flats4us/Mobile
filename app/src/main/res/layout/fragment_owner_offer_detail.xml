<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.OwnerOfferDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_view_image_height"
                        android:contentDescription="zdjęcie nieruchomości"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/imageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@color/transparent_black"
                        android:textColor="@color/white"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        app:drawableLeftCompat="@drawable/baseline_camera_alt_24"
                        app:drawableTint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@id/image"
                        app:layout_constraintEnd_toEndOf="@id/image" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/regular_vertical_space">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textStyle="italic"
                        android:textSize="@dimen/subtext_text_size"
                        android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                        android:layout_weight="1"
                        android:gravity="end"/>
                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="@dimen/subtext_text_size"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/regular_vertical_space">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:textStyle="italic"
                        android:textSize="@dimen/subtext_text_size"
                        android:layout_marginEnd="@dimen/text_view_horizontal_margin"
                        android:layout_weight="1"
                        android:gravity="end"/>
                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="@dimen/subtext_text_size"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/background_header"
                    android:layout_marginBottom="@dimen/header_vertical_space">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h1"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monthly_price"
                        android:textSize="@dimen/h1"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingStart="@dimen/table_cell_padding"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/offer_details"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/header_vertical_space"
                    android:background="@drawable/background_header" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/regular_vertical_space">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/city"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/district"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/district"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/street"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/street"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/area"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:paddingStart="@dimen/table_cell_padding">

                            <TextView
                                android:id="@+id/area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit"
                                android:textSize="@dimen/regular_text_size"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/landAreaLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/land_area"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:paddingStart="@dimen/table_cell_padding">

                            <TextView
                                android:id="@+id/landArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/unit"
                                android:textSize="@dimen/regular_text_size"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/number_of_rooms"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/numberOfRooms"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/period"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:paddingStart="@dimen/table_cell_padding">

                            <TextView
                                android:id="@+id/period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/regular_text_size"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/month"
                                android:textSize="@dimen/regular_text_size"
                                android:paddingStart="1dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/max_residents"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/maxResidents"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/construction_year"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/constructionYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_name_weight"
                            android:text="@string/equipment"
                            android:textStyle="italic"
                            android:textSize="@dimen/regular_text_size"
                            android:gravity="end"/>

                        <TextView
                            android:id="@+id/equipment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/text_view_column_value_weight"
                            android:textSize="@dimen/regular_text_size"
                            android:paddingStart="@dimen/table_cell_padding"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/header_vertical_space"
                    android:background="@drawable/background_header"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:maxLines="100"
                    android:scrollHorizontally="false"
                    android:textSize="@dimen/regular_text_size"
                    android:text="@string/lorem_ipsum"
                    android:layout_marginBottom="@dimen/regular_vertical_space"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/interested_people"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/header_vertical_space"
                    android:background="@drawable/background_header"/>
                <TextView
                    android:id="@+id/interestedPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/regular_vertical_space"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="16dp"
                        android:src="@drawable/baseline_notifications_24"
                        app:elevation="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>