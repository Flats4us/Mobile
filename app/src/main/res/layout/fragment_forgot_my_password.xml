<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ForgotMyPasswordFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/header_vertical_space"
            android:text="@string/forgot_my_password"
            android:textColor="@color/black"
            android:textSize="@dimen/h1"
            android:textStyle="bold"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_with_edit_text_horizontal_margin"
            android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin">
            <LinearLayout
                android:id="@+id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_login_margin_top"
                android:background="@drawable/background_input"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_marginStart="@dimen/icon_margin"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/baseline_email_24"
                    app:tint="@color/black" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    android:hint="@string/nazwa_email_com"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin"
                    android:textSize="@dimen/edit_text_size"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_name_margin_vertical"
                android:background="@color/white"
                android:paddingStart="@dimen/layout_name_padding_vertical"
                android:paddingEnd="@dimen/layout_name_padding_vertical"
                android:text="@string/email"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/layoutEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/layoutEmail"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/buttons_margin_horizontal"
            android:layout_marginTop="@dimen/buttons_margin_horizontal"
            android:layout_marginBottom="@dimen/buttons_margin_horizontal"
            android:layout_marginEnd="@dimen/buttons_margin_horizontal"
            android:text="@string/send"
            android:textSize="@dimen/regular_text_size"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>