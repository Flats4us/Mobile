                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_location_on_24"
                            app:tint="@color/black" />
                        <EditText
                            android:id="@+id/flatNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:background="@null"
                            android:hint="@string/flat_number"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                            android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/flatNumberHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_name_margin_vertical"
                        android:background="@color/white"
                        android:paddingStart="@dimen/layout_name_padding_vertical"
                        android:paddingEnd="@dimen/layout_name_padding_vertical"
                        android:text="@string/flat_number"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutFlatNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutFlatNumber"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPostalCodeWithHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_with_edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin">

                    <LinearLayout
                        android:id="@+id/layoutPostalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_register_margin_top"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginStart="@dimen/icon_margin"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_location_on_24"
                            app:tint="@color/black" />
                        <EditText
                            android:id="@+id/postalCode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:background="@null"
                            android:hint="@string/postal_code"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                            android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/postalCodeHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_name_margin_vertical"
                        android:background="@color/white"
                        android:paddingStart="@dimen/layout_name_padding_vertical"
                        android:paddingEnd="@dimen/layout_name_padding_vertical"
                        android:text="@string/required_postal_code"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutPostalCode"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutPostalCode"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_with_edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/layoutEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_register_margin_top"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginStart="@dimen/icon_margin"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_email_24"
                            app:tint="@color/black" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:background="@null"
                            android:hint="@string/nazwa_email_com"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                            android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_name_margin_vertical"
                        android:background="@color/white"
                        android:paddingStart="@dimen/layout_name_padding_vertical"
                        android:paddingEnd="@dimen/layout_name_padding_vertical"
                        android:text="@string/email"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutEmail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutEmail"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_with_edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin">
                    <LinearLayout
                        android:id="@+id/layoutPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_register_margin_top"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginStart="@dimen/icon_margin"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_phone_24"
                            app:tint="@color/black" />
                        <EditText
                            android:id="@+id/phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:background="@null"
                            android:hint="@string/phone_number"
                            android:imeOptions="actionNext"
                            android:importantForAutofill="no"
                            android:inputType="phone"
                            android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                            android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/phoneNumberHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_name_margin_vertical"
                        android:background="@color/white"
                        android:paddingStart="@dimen/layout_name_padding_vertical"
                        android:paddingEnd="@dimen/layout_name_padding_vertical"
                        android:text="@string/required_phone_number"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutPhoneNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutPhoneNumber"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_with_edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/layoutPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_register_margin_top"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_height"
                            android:layout_marginStart="@dimen/icon_margin"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_lock_24"
                            app:tint="@color/black" />
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/textPassword"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/edit_text_height"
