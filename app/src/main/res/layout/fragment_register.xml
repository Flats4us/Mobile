                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:layout_marginStart="@dimen/edit_text_horizontal_margin"
                            android:layout_marginEnd="@dimen/edit_text_horizontal_margin"
                            android:textSize="@dimen/regular_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/streetHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_name_margin_vertical"
                        android:background="@color/white"
                        android:paddingStart="@dimen/layout_name_padding_vertical"
                        android:paddingEnd="@dimen/layout_name_padding_vertical"
                        android:text="@string/required_street"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@id/layoutStreet"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/layoutStreet"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_with_edit_text_horizontal_margin"
                    android:layout_marginEnd="@dimen/layout_with_edit_text_horizontal_margin">

                    <LinearLayout
                        android:id="@+id/layoutBuildingNumber"
