<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AddRealEstateFourthStepFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_view_image_height"
                android:contentDescription="zdjęcie nieruchomości"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/imageCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/example"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/regular_vertical_space">

            <LinearLayout
                android:id="@+id/layoutVoivodeship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/voivodeship"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/voivodeship"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/city"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/district"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/street"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/street"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBuildingNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/building_number"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/buildingNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/floor"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/floor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFlatNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/flat_number"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/flatNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/area"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:paddingStart="@dimen/table_cell_padding">

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/regular_text_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit"
                        android:textSize="@dimen/regular_text_size"
                        android:paddingStart="@dimen/text_view_padding"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLandArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/land_area"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:paddingStart="@dimen/table_cell_padding">

                    <TextView
                        android:id="@+id/landArea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/regular_text_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit"
                        android:textSize="@dimen/regular_text_size"
                        android:paddingStart="@dimen/text_view_padding"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/max_residents"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/maxResidents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/construction_year"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/constructionYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNumberOfRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/number_of_rooms"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/numberOfRooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNumberOfFloors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/number_of_floors"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/numberOfFloors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_name_weight"
                    android:text="@string/equipment"
                    android:textStyle="italic"
                    android:textSize="@dimen/regular_text_size"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/equipment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/text_view_column_value_weight"
                    android:textSize="@dimen/regular_text_size"
                    android:paddingStart="@dimen/table_cell_padding"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/prevButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_button_min_height"
            android:layout_gravity="center_horizontal"
            android:drawableEnd="@drawable/baseline_navigate_before_24"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/prev_button"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/addPropertyButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_button_min_height"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/add_real_estate"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/updatePropertyButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_button_min_height"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Zaktualizuj nieruchomość"
            android:visibility="gone"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_button_min_height"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>