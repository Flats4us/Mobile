<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zgłoś problem"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Czego dotyczy problem:"
                android:layout_marginBottom="10dp"/>

            <CheckBox
                android:id="@+id/checkBoxAppIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem z aplikacją"
                android:layout_marginBottom="10dp"/>

            <CheckBox
                android:id="@+id/checkBoxPaymentIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem z płatnością"
                android:layout_marginBottom="10dp"/>

            <CheckBox
                android:id="@+id/checkBoxProfileIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Problem z profilem"
                android:layout_marginBottom="10dp"/>

            <CheckBox
                android:id="@+id/checkBoxOtherIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inne"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTextOtherIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wpisz swój problem jeśli wybrałeś 'Inne'"
                android:layout_marginBottom="24dp"
                android:padding="10dp"
                android:background="@drawable/background_input"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opisz problem:"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTextIssueDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Opis problemu"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:background="@drawable/background_input"
                android:padding="10dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/buttonSubmitIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ZGŁOŚ"
                android:layout_marginTop="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
