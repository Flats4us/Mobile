<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flats4us21"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31" >
        <activity
            android:name=".DrawerActivity"
            android:exported="true"
            android:theme="@style/Theme.Flats4us21.NoActionBar"/>
<!--            android:label="@string/title_activity_drawer"/>-->
        <activity
            android:name=".ProfileActivity"
            android:exported="true" />

        <activity
            android:name=".ProfileInsightActivity"
            android:exported="true" />
        <activity
            android:name=".ReviewSubmissionScreen"
            android:exported="true" />
        <activity
            android:name=".MapActivity"
            android:exported="true" />
        <provider
            android:name="com.example.flats4us21.MyFileProvider"
            android:authorities="com.example.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>